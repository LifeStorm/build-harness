SEMVERSIONS :=

SEMVERSIONS += $(GIT_LATEST_TAG)+sha.$(GIT_COMMIT_SHORT)
SEMVERSIONS += $(GIT_LATEST_TAG)+sha.$(GIT_COMMIT)

ifeq ($(GIT_IS_TAG),1)
	SEMVERSIONS += $(GIT_LATEST_TAG)
endif

ifeq ($(GIT_IS_BRANCH),1)
	SEMVERSIONS += $(GIT_LATEST_TAG)-$(GIT_BRANCH)
	SEMVERSIONS += $(GIT_LATEST_TAG)-$(GIT_BRANCH)+sha.$(GIT_COMMIT_SHORT)
	SEMVERSIONS += $(GIT_LATEST_TAG)-$(GIT_BRANCH)+sha.$(GIT_COMMIT)
endif

export SEMVERSION ?= $(word 1,$(SEMVERSIONS))

## Show
semver\:show:
	@for version in $(SEMVERSIONS) ; do \
		echo "$$version"; \
	done
